<Window x:Class="PPPK_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPPK_Projekt"
        mc:Ignorable="d"
        Title="Glavni izbornik" Height="500" Width="300">

    <StackPanel Orientation="Vertical">

        <TextBlock Text="Odaberite opciju:" HorizontalAlignment="Center" FontSize="25" FontWeight="ExtraBold" Margin="5 40 5 45">
            
        </TextBlock>
        
        <Button FontSize="20" FontWeight="Bold" Content="Vozači" Margin="15" x:Name="btn_vozaci" Width="200" Height="70" Click="btn_vozaci_Click">
        </Button>

        <Button FontSize="20" FontWeight="Bold" Content="Vozila" Margin="15"  x:Name="btn_vozila" Width="200" Height="70" Click="btn_vozila_Click">
        </Button>
        <Button FontSize="20" FontWeight="Bold" Content="Putni Nalozi" Margin="15" x:Name="btn_putniNalozi" Width="200" Height="70" Click="btn_putniNalozi_Click">
        </Button>
    </StackPanel>
   
</Window>
